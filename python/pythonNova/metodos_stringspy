# upper() pasar a mayusculas
# lower() pasar a minusculas
# split() separarlo por partes
# join() unir items utilizando separador
# find() encontrar un substring
# replace() reemplaza un substring


texto = "Este texto es una prueba"
resultado = texto.upper()
print(resultado)

resultado = texto.lower()
print(resultado)

resultado = texto.split()
print(resultado)

resultado = texto.split("t")
print(resultado)


a = "Aprnder"
b = "Python"
c = "es"
d = "genial"
e = " ".join([a, b, c, d])
print(e)

resultado = texto.find("s")
print(resultado)

resultado = texto.replace("prueba", "cosa")
print(resultado)

texto = "Especialmente en las comunidades electronicas, la escriturra enteramente en mayusculas equivale a gritar"
resultado = texto.upper()
print(resultado)

lista = ["La", "legibilidad", "cuenta."]
resultado = " ".join(lista)
print(resultado)
print(" ".join(lista))

texto = "Si la implemenatcion es dificil de explicar, puede que sea una mala idea"
resultado = texto.replace("dificil", "facil").replace("mala", "buena")
print(resultado)
